        "build": [],
        "install": [
            {
                "linux": [
                    "python -m venv venv",
                    "pip install --upgrade pip",
                    "source venv/bin/activate",
                    "pip install -r requirements.txt",
                    "deactivate"
                ],
                "windows": [
                    "python -m venv venv",
                    "pip install --upgrade pip",
                    "venv\\Scripts\\activate",
                    "pip install -r requirements.txt",
                    "deactivate"
                ]
            }
        ],
        "test": [],
